<%= render "partials/navbar/navbar" %>

<% unless authenticated? %>
  <%= render "partials/events/events_unauthenticated_welcome" %>
<% else %>
  <main>
    <section class="flex flex-col gap-4 p-4">
      <h1 class="text-4xl text-center font-bold text-accent">Available Event</h1>

      <% @events.each do |event| %>
        <% if event.hoster.id != @user.id %>
          <div class="card bg-base-100 shadow-xl rounded">
            <div class="card-body break-words">
              <h2 class="text-3xl font-bold card-title"><%= event.name %></h2>
              <p><%= event.description %></p>
              <div class="card-actions justify-center mt-4">
                <div>
                  <button
                    type="button"
                    class="btn btn-primary text-white"
                    onclick="hosting_modal_<%= event.id %>.showModal()"
                  >Attendees List</button>
                  <dialog id="hosting_modal_<%= event.id %>" class="modal">
                    <div class="modal-box">
                      <h3 class="text-2xl font-bold text-accent">Attendees</h3>
                      <% if event.attendees.any? %>
                        <ul class="mt-4">
                          <% event.attendees.each do |attende| %>
                            <li><%= attende.username %></li>
                          <% end %>
                        </ul>
                      <% else %>
                        <p>No attendees yet!</p>
                      <% end %>
                      <div class="modal-action">
                        <form method="dialog">
                          <button class="btn bg-base-200">Close</button>
                        </form>
                      </div>
                    </div>
                  </dialog>
                </div>

                <% if event.attendee_ids.include?(@user.id) %>
                  <%= button_to "Unattend",
                  unattend_event_path(event),
                  method: :delete,
                  data: {
                    turbo_confirm: "Are you sure ?",
                  },
                  class: "btn btn-error text-white" %>
                <% else %>
                  <%= button_to "Attend",
                  attend_event_path(event),
                  method: :post,
                  data: {
                    turbo_confirm: "Do you want to attend the event ?",
                  },
                  class: "btn btn-primary text-white" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

      <% end %>
    </section>
  </main>
<% end %>
